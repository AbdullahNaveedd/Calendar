<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_calendar_dialog"
    android:padding="20dp">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/close_24dp_000000_fill0_wght400_grad0_opsz24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnLast3Months"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="NotSibling" />

    <LinearLayout
        android:id="@+id/quickRangeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnLast7"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Last 7 days"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="@drawable/bg_quick_button_normal"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/btnLast30"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Last 30 days"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="@drawable/bg_quick_button_normal"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/btnLast3Months"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Last 3 months"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="@drawable/bg_quick_button_normal"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvCustomRangeHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="6dp"
        android:text="Custom Range"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/quickRangeLayout"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/tvCustomRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@drawable/bg_quick_button_normal"
        android:text="Aug 17"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvCustomRangeHeading"
        app:layout_constraintTop_toBottomOf="@id/tvCustomRangeHeading" />


    <TextView
        android:id="@+id/tvCustomRangeGap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="-"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvCustomRange"
        app:layout_constraintTop_toBottomOf="@id/tvCustomRangeHeading" />


    <TextView
        android:id="@+id/tvCustomRangeEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@drawable/bg_quick_button_normal"
        android:text="Aug 23"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvCustomRangeGap"
        app:layout_constraintTop_toBottomOf="@id/tvCustomRangeHeading" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/monthYearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="@+id/calendarView"
        app:layout_constraintStart_toStartOf="@+id/calendarView"
        app:layout_constraintTop_toBottomOf="@+id/tvCustomRange">

        <ImageView
            android:id="@+id/btnPrevMonth"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="40dp"
            android:padding="8dp"
            android:src="@drawable/chevron_left_24dp_000000_fill0_wght400_grad0_opsz24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMonthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="January 2025"
            android:textColor="#1762DD"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnNextMonth"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/chevron_right_24dp_000000_fill0_wght400_grad0_opsz24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.kizitonwose.calendar.view.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cv_dayViewResource="@layout/calendar_day"
        app:cv_monthHeaderResource="@layout/calendar_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monthYearLayout" />

    <TextView
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_confirm_button"
        android:gravity="center"
        android:text="Confirm Selection"
        android:textColor="#040303"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/calendarView"
        app:layout_constraintStart_toStartOf="@+id/calendarView"
        app:layout_constraintTop_toBottomOf="@id/calendarView" />

</androidx.constraintlayout.widget.ConstraintLayout>