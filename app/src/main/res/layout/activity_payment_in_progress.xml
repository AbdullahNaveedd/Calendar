<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitish"
    tools:context=".PaymentInProgress">

    <TextView
        android:id="@+id/txtPaymentInProcess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/UnderLinedString"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14dp"
        android:padding="8dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/payment_text_bg"
        app:layout_constraintStart_toStartOf="@id/constaint_second"
        app:layout_constraintEnd_toEndOf="@id/constaint_second"
        app:layout_constraintBottom_toTopOf="@+id/constaint_second"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constaint_second"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/constraint_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/okay_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/okay_btn"
            android:text="@string/next_fragment"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/constaint_second"
            app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/constaint_second"
        app:layout_constraintTop_toBottomOf="@id/constaint_second"
        app:layout_constraintEnd_toEndOf="@id/constaint_second"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/incrementbtn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/bg_calendar_dialog"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/constaint_second"
        app:layout_constraintTop_toBottomOf="@id/num" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/decrementbtn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_calendar_dialog"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/constaint_second"
        app:layout_constraintTop_toBottomOf="@id/num" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:src="@drawable/logo_bg"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>